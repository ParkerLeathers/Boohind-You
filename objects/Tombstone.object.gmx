            <string>//draw tombstone (fix bug)
draw_self();

//prepare "Behind you" text
draw_set_font(f_spooky);
draw_set_halign(fa_center);
draw_set_color(make_color_rgb(136,152,161));

//trigger when lit
if(behindyoutimer == 0 &amp;&amp; Ghost.sprite_index != s_ghost_poof &amp;&amp; instance_place(x,y,Light) != noone){
    behindyoutimer = room_speed * 2;
    Ghost.x = Player.x - 200;
    Ghost.y = y;
}

var scaledtimer;
if(behindyoutimer==1) //right before the behindyoutimer would end, set it to -1 so it doesnt retrigger
    behindyoutimer = -1;  
else if(behindyoutimer&gt;0){
    //decrement behindyoutimer
    scaledtimer = abs(abs(room_speed*2 - abs(behindyoutimer*2 - room_speed * 2))/(room_speed*2));
    draw_set_color(make_color_rgb(136,161,162+90*scaledtimer));
    draw_text_transformed(x-3,y+8,"Behind#You",.5+.5*scaledtimer,.5+.5*scaledtimer,0);
    behindyoutimer--;
}

draw_text_transformed(x-3,y+8,"Behind#You",.5,.5,0);
</string>
